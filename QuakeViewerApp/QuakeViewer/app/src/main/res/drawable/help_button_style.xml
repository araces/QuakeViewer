<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#00000000"
                android:endColor="#00000000"
                android:angle="270" />
            <stroke android:width="0dip" android:color="#00000000" />
            <corners android:radius="0dp" />
            <padding android:left="5dp" android:top="7dp"
                android:right="120dp" android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#00000000" android:endColor="#00000000" android:angle="270" />
            <stroke android:width="0dip" android:color="#00000000" />
            <corners android:radius="0dp" />
            <padding android:left="5dp" android:top="7dp"
                android:right="120dp" android:bottom="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#00000000" android:endColor="#00000000"
                android:angle="180" />
            <stroke android:width="0dip" android:color="#00000000" />
            <corners android:radius="0dip" />
            <padding android:left="5dp" android:top="7dp"
                android:right="120dp" android:bottom="5dp" />
        </shape>
    </item>
</selector>